
<div *ngFor="let recipe of (store.select('recipes') | async  )?.recipes">
{{recipe._id}}
 <label>Name</label> : {{recipe.title}}<br>
 <label>Recipe By</label> : {{ recipe.recipe_by}}<br>
 <label>Description</label> : {{ recipe.description }}<br>
 <label>Ingredients</label>:
<ul>
  <li *ngFor="let ingredent of recipe.ingredients">{{ingredent.ingredient}} -- {{ingredent.qty}}</li>
</ul>
<label>Direction</label> : {{recipe.directions}}
<h4> <strong> Reviews : </strong> </h4>

<div *ngFor="let review of recipe.reviews">
<label>Name :</label>  {{review.name}}<br>
<label> Recipe : </label> {{review.comments}}
</div>

<form (ngSubmit)="addComment()">
    <div  class="form-group">
        <label> Name: </label>
        <input type="text" class="form-control" name="name"/>        
    </div>
    <div  class="form-group">
        <label> Comments: </label>
        <textarea class="form-control" name="comments"> </textarea>
    </div>
    <input type="submit" class="btn btn-primary btn-xs" value="Add Comment">
</form>
<hr style="height:.5px;border:none;color:#333;background-color:#333;">
</div>

